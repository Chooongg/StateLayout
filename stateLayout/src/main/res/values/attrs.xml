<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="StateLayout_Layout">
        <!-- retain content, not affected by StateLayout -->
        <attr name="layout_visibilityStrategy" format="enum">
            <!-- display when content state -->
            <enum name="content" value="0" />
            <!-- display when other state -->
            <enum name="other" value="1" />
            <!-- display when other state and ignore content state -->
            <enum name="otherIgnoreContent" value="2" />
            <!-- display when all state -->
            <enum name="always" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="StateLayout">
        <attr name="beginIsContent" format="boolean" />
    </declare-styleable>
</resources>