<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.StateLayout"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:logo="@drawable/ic_logo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.chooongg.widget.stateLayout.simple.BasicActivity"
            android:label="@string/basic_usage"
            android:logo="@drawable/ic_logo" />
        <activity
            android:name="com.chooongg.widget.stateLayout.simple.ParamActivity"
            android:label="@string/param_usage"
            android:logo="@drawable/ic_logo" />
        <activity
            android:name="com.chooongg.widget.stateLayout.simple.ChildViewActivity"
            android:label="@string/child_view_usage"
            android:logo="@drawable/ic_logo" />
        <activity
            android:name="com.chooongg.widget.stateLayout.simple.CodeActivity"
            android:label="@string/code_usage"
            android:logo="@drawable/ic_logo" />
    </application>

</manifest>